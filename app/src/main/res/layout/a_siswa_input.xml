<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    android:orientation="vertical"
    android:scrollbarSize="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="16dp">

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="NIS"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/nis"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="6"
                    android:textColor="#000"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="NISN"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:inputType="number"
                    android:id="@+id/nisn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="10"
                    android:textColor="#000"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="Nama Siswa"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/namna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:textColor="#000"
                    android:textSize="18sp" />


            </TableRow>
            <TableRow
                android:paddingTop="8dp"
                android:paddingBottom="7dp">

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="Jenis Kelamin"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="6dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spiner_agama">

                    <Spinner

                        android:id="@+id/jenkel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!--<EditText-->
                <!--android:id="@+id/agama"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:maxLength="100"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="18sp" />-->


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="Tempat Lahir"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/tmp_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="20"
                    android:textColor="#000"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="Tanggal Lahir"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/pilih_tgl"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/inpt_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pilih Tanggal"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_appointment" />


                </LinearLayout>


            </TableRow>

            <TableRow
                android:paddingTop="8dp"
                android:paddingBottom="7dp">

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="Agama"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="6dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spiner_agama">

                    <Spinner

                        android:id="@+id/agama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!--<EditText-->
                <!--android:id="@+id/agama"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:maxLength="100"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="18sp" />-->


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="@string/ortu"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/orang_tua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </TableRow>


            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical"
                    android:text="Alamat"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/alamatcounter"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:gravity="top"
                    app:counterEnabled="true"
                    app:counterMaxLength="255">

                    <EditText
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLength="255"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>


            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="@string/ijazah"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/no_ijazah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="2dp"
                    android:text="No Ujian SMP/MTs"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/no_ujian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/kirimtanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80bfff"
                android:text="Kirim" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</ScrollView>
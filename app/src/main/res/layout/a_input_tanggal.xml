<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bagianinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="16dp">

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="10dp"
                    android:text="Tanggal"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="6dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/pilih_tgl"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/inpt_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pilih Tanggal"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iconpilihgambar"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_appointment" />


                </LinearLayout>


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="10dp"
                    android:text="Keterangan"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="6dp"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100">

                    <EditText
                        android:id="@+id/ket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:maxLength="100"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
                <!--<EditText-->
                <!--android:id="@+id/ket"-->
                <!--android:layout_weight="1"-->
                <!--android:paddingStart="0dp"-->
                <!--android:paddingEnd="5dp"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="18sp" />-->

            </TableRow>

        </TableLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/kirimtanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80bfff"
                android:text="Kirim" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/nulldata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccd9ff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Tidak Ada Data Tanggal Libur."
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone" />
    </android.support.v7.widget.CardView>

</LinearLayout>
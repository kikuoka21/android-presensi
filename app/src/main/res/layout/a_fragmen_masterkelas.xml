<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/input_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Input Kelas Baru"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/lihat_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Cari dan lihat data kelas"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/Kelas_Ubha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Ubah data kelas"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/hapus_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Hapus kelas"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>


    </LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/inputsiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Input Siswa Baru"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/carisiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Lihat data siswa"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/ubahsiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Ubah data siswa"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/ubahpasssiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Ubah Password Siswa"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>
        <Button
            android:id="@+id/hapussiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16sp"
            android:text="Hapus Siswa"
            android:textAllCaps="false"
            android:background="@drawable/button_master"/>


    </LinearLayout>


</ScrollView>